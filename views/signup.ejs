	<section id="signup"  style="margin-top: 90px; height: 95%;">
        <div class="container">
        		<div class="col-md-5 formBox">
                        <br/>
                        <h2 style="font-weight: 900; text-align: center">SignUp</h2>

                    <form class="signupFormCustomCard" name="signupForm" action="/users/handleSignup" method="post" onsubmit="return validateSignupForm()">
                        <div class="inputFields">
                            <label class="feildName">Name: </label>
                            <input class="name" name="userName" type="text" />
                            <label class="error" id="userNameError"></label>
                        </div>

                        <div class="inputFields">
                            <label class="feildName">Email:</label>
                            <input class="email" name="email" type="text" />
                            <label class="error" id="emailError"></label>
                        </div>
        		<div class="inputFields">
                    <label class="feildName">State:</label>
                    <select class="phone" name="state">
                    <%
                      console.log(states);
                      for(state in states){
                    %>
                      <option value=<%=states[state]%>><%=states[state]%></option>
                      <%
                      }
                      %>
                    </select>
                    <label class="error" id="stateError"></label>
                  </div>

                        <div class="inputFields">
                            <label class="feildName">Password:</label>
                            <input class="password" name="password" type="password" />
                            <label class="error" id="passwordError"></label>
                        </div>


                        <div class="inputFields">
                            <label class="feildName">Phone:</label>
                            <input class="phone" name="phone" type="text" />
                            <label class="error" id="phoneError"></label>
                        </div>
                        <br/>
                        <div class="inputFields" style="text-align: center">
                            <input class="btn btn-primary" type="submit" value="Submit" style="background:maroon;"/>
                            <input class="btn btn-primary"  type="button" onclick="clearForm()" value="Clear" style="margin-left:20px;background:maroon;"/>
                        </div>

                    </form>
        		</div>
        </div>
	</section>


